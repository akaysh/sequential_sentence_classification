: false}, {"text_id": "BJe2djKE3X", "sid": 31, "labels": {"coarse": "Request", "fine": "Request.Edit", "asp": "Substance", "pol": "U-Neutral"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 32, "labels": {"coarse": "Request", "fine": "Request.Edit", "asp": "Substance", "pol": "U-Neutral"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 33, "labels": {"coarse": "Request", "fine": "Request.Experiment", "asp": "Substance", "pol": "U-Neutral"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 34, "labels": {"coarse": "Evaluative", "fine": "Evaluative", "asp": "Substance", "pol": "U-Neutral"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 35, "labels": {"coarse": "Request", "fine": "Request.Clarification", "asp": "Clarity", "pol": "U-Neutral"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 36, "labels": {"coarse": "Evaluative", "fine": "Evaluative", "asp": "Substance", "pol": "P-Positive"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 37, "labels": {"coarse": "Evaluative", "fine": "Evaluative", "asp": "Clarity", "pol": "P-Positive"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 38, "labels": {"coarse": "Request", "fine": "Request.Edit", "asp": "Other", "pol": "U-Neutral"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 39, "labels": {"coarse": "Evaluative", "fine": "Evaluative", "asp": "Soundness/Correctness", "pol": "N-Negative"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 40, "labels": {"coarse": "Evaluative", "fine": "Evaluative", "asp": "Substance", "pol": "N-Negative"}, "secondarylabels": [], "merge-with-prior": false}, {"text_id": "BJe2djKE3X", "sid": 41, "labels": {"coarse": "Request", "fine": "Request.Experiment", "asp": "Substance", "pol": "U-Neutral"}, "secondarylabels": [], "merge-with-prior": false}], "rebuttal": [{"text_id": "HklKrfHc0X", "sid": 0, "sentence": "Thank you for your thoughtful review. We will address your concerns in turn."}, {"text_id": "HklKrfHc0X", "sid": 1, "sentence": "Q1: So you provide the general framework where somebody has to specify only the F?"}, {"text_id": "HklKrfHc0X", "sid": 2, "sentence": "A1: Yes, and that is the motivation of this work, to avoid training new models for slightly different situations."}, {"text_id": "HklKrfHc0X", "sid": 3, "sentence": "Q2: The efficiency of the method is highly based on the ability of the GAN to approximate well the prior distribution of the noise-free images."}, {"text_id": "HklKrfHc0X", "sid": 4, "sentence": "A2: Yes, so we use WGAN-GP, a strong and elegant implementation, as our trained GAN."}, {"text_id": "HklKrfHc0X", "sid": 5, "sentence": "Q3: Is parameter Omega estimated individually for each degraded image?"}, {"text_id": "HklKrfHc0X", "sid": 6, "sentence": "A3: Yes."}, {"text_id": "HklKrfHc0X", "sid": 7, "sentence": "Thank you again for your positive reviews which give me some confidence, I really appreciate it."}], "rebuttallabels": [{"labels": {"alignments": [], "responsetype": "social", "coarseresponse": "nonarg"}, "text_id": "HklKrfHc0X", "sid": 0}, {"labels": {"alignments": [10], "responsetype": "structuring", "coarseresponse": "nonarg"}, "text_id": "HklKrfHc0X", "sid": 1}, {"labels": {"alignments": [10], "responsetype": "answer", "coarseresponse": "concur"}, "text_id": "HklKrfHc0X", "sid": 2}, {"labels": {"alignments": [11], "responsetype": "structuring", "coarseresponse": "nonarg"}, "text_id": "HklKrfHc0X", "sid": 3}, {"labels": {"alignments": [11], "responsetype": "answer", "coarseresponse": "concur"}, "text_id": "HklKrfHc0X", "sid": 4}, {"labels": {"alignments": [17], "responsetype": "structuring", "coarseresponse": "nonarg"}, "text_id": "HklKrfHc0X", "sid": 5}, {"labels": {"alignments": [17], "responsetype": "structuring", "coarseresponse": "nonarg"}, "text_id": "HklKrfHc0X", "sid": 6}, {"labels": {"alignments": [], "responsetype": "social", "coarseresponse": "nonarg"}, "text_id": "HklKrfHc0X", "sid": 7}], "metadata": {"anno": "anno13", "review": "BJe2djKE3X", "rebuttal": "HklKrfHc0X", "conference": "ICLR2019", "title": "Maximum a Posteriori on a Submanifold: a General Image Restoration Method with GAN", "reviewer": "AnonReviewer2", "forum_id": "S1xLZ2R5KQ", "rating": "6: Marginally above acceptance threshold", "confidence": "4: The reviewer is confident but not absolutely certain that the evaluation is correct"}}